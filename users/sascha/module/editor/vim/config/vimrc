set nocompatible

""Make VIM use XDG directories
"if empty("$XDG_CACHE_HOME")
"    let $XDG_CACHE_HOME="$HOME/.cache"
"endif
"
"if empty("$XDG_CONFIG_HOME")
"    let $XDG_CONFIG_HOME="$HOME/.config"
"endif
"
"if empty("$XDG_DATA_HOME")
"    let $XDG_DATA_HOME="$HOME/.local/share"
"endif
"
""TODO might need to create vim subdirectory first
""store undofiles in data directory
"set undodir=$XDG_DATA_HOME/vim
""store .swp files in data directory
"set directory=$XDG_DATA_HOME/vim
""store .bak files in data directory
"set backupdir=$XDG_DATA_HOME/vim
""store command and search history in cache directory
"set viminfo+=n$XDG_CACHE_HOME/vim/viminfo
"
"set runtimepath=$XDG_CONFIG_HOME/vim,$VIM,$VIMRUNTIME,$XDG_CONFIG_HOME/vim/after
"let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc"

